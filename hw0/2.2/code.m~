%% Functions
function normalizedColumns = normalizeColumns(m)
    normalizedMatrix = [];
    for i = 1 : size(m, 2)
        normalizedMatrix(:,i) = m(:, i) ./ max(m(:, i));
    end
    normalizedColumns = normalizedMatrix;
end